zcash_gtest_SOURCES += \
	wallet/gtest/test_wallet_zkeys.cpp \
	wallet/gtest/test_orchard_zkeys.cpp \
	wallet/gtest/test_note_selection.cpp \
	wallet/gtest/test_orchard_wallet.cpp \
